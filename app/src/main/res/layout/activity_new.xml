<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="isData"
            type="com.example.recyclerview.SongData" />


    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0F171E"
        tools:context=".view.NewActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:background="@drawable/gradient"
                    android:layout_height="300dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="150dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp"
                    android:imageUrl="@{isData.img}"
                    android:scaleType="fitXY" />
                <Button
                    android:id="@+id/playbutton"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/iconplay"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />

                <TextView
                    android:id="@+id/name"
                    android:text="@{isData.name}"
                    android:gravity="center"
                    android:textStyle="bold|normal"
                    android:textSize="22sp"
                    android:elevation="15dp"
                    android:padding="10dp"
                    android:fontFamily="@font/magicky"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="15dp"

                    android:textColor="@color/white"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/info"
                    android:text="@{isData.info}"
                    android:layout_marginTop="140dp"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:fontFamily="@font/magicky"
                    android:layout_gravity="start"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#D3D3D3"
                    android:textStyle="bold|normal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/buttonback"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/backwhite" />


            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>

</layout>